extends ../layouts/layout

block content
    .row
        .col-sm-12
            .panel.panel-default
                .panel-heading
                    | Information
                .panel-body
                    div
                        h3.pull-left
                            i=log.logInfo.project
                            | &nbsp; Week #{log.logInfo.week}
                        h3.pull-right
                            small=log.logInfo.title
                    div.clearfix
                    hr
                    p=log.comments
                
    .row
        .col-sm-12
            .panel.panel-default
                .panel-heading
                    | Commits
                .panel-body(style='max-height: 400px; overflow-y: scroll;')
                    .list-group#commitsList
                        - for (var i=0; i<log.commitHistory.length; i++) {
                        - var x = log.commitHistory[i];
                        .list-group-item
                            h4.list-group-item-heading=x.message
                            span.list-group-item-text
                                | #{x.author.date}
                                a(href=x.html_url, target="_blank").pull-right
                                    | View changes
                        - }
                